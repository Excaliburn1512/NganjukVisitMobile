        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/imageprofilesexample"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hello, Justin!"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/ic_baseline_notifications_24"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/header"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Where do you want to explore today ?"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:inputType="text"
                    android:longClickable="false"
                    android:background="@drawable/rounded_searchbar"
                    android:hint="search destination"
                    android:textColorHint="@color/abuabu_transparent"
                    android:textSize="20sp"
                    android:paddingVertical="10dp"
                    android:paddingLeft="18dp"
                    android:drawableEnd="@drawable/searchicon"
                    android:paddingEnd="18dp"
                    android:textColor="@color/abuabu_transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Select Category"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

<!--                    <Button-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:layout_marginEnd="10dp"-->
<!--                        android:paddingEnd="14dp"-->
<!--                        android:background="@drawable/rounded_category"-->
<!--                        android:text="Wisata"-->
<!--                        android:gravity="center"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:drawableStart="@drawable/ico_google2"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:enabled="true"-->
<!--                        />-->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/loginButtonWithGoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_category"
                        app:backgroundTint="@null"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="30dp"
                        android:gravity="center"
                        android:text="Wisata"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/backbutton"
                        android:paddingEnd="11dp"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        android:enabled="true"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="14dp"
                        android:background="@drawable/rounded_category"
                        android:text="Kuliner"
                        android:drawableStart="@drawable/backbutton"
                        android:textAllCaps="false"
                        android:elevation= "0dp"
                        android:stateListAnimator="@null"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="14dp"
                        android:background="@drawable/rounded_category"
                        android:text="Event"
                        android:drawableStart="@drawable/backbutton"
                        android:textAllCaps="false"
                        android:elevation= "0dp"
                        android:stateListAnimator="@null"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingEnd="14dp"
                        android:background="@drawable/rounded_category"
                        android:text="Hotel"
                        android:drawableStart="@drawable/backbutton"
                        android:textAllCaps="false"
                        android:elevation= "0dp"
                        android:stateListAnimator="@null"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wisataLayout"
                app:layout_constraintTop_toBottomOf="@+id/selectcategory"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:backgroundTint="@color/black"
                android:orientation="vertical">


            </LinearLayout>

