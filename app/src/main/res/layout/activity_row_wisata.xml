<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutListWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/garistepilinear"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageWisata"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="@drawable/sedudobg"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wisataTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/urbanistbold"
                    android:text="sedudo"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    />

                <ImageView
                    android:id="@+id/favsbutton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/favorite_button_white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textvwDescw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/urbanistregular"
                android:textColor="@color/black"
                android:text="@string/loremipsumgenerator"/>

        </LinearLayout>


    </LinearLayout>