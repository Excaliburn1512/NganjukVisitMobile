<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bawah">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/konten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="16dp">
    <TextView
        android:id="@+id/textbooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/urbanistbold"
        android:text="Detail Booking"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/namapesanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/borderedittext"
        android:hint="Masukan nama anda"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textbooking" />
    <TextView
        android:id="@+id/label_namapesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="-10dp"
        android:text="Nama Pemesan"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintBottom_toTopOf="@id/namapesanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailpesanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/borderedittext"
        android:hint="Masukan email anda"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/namapesanan" />
    <TextView
        android:id="@+id/label_emailpesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="-10dp"
        android:text="Email"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintBottom_toTopOf="@id/emailpesanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nomorpesanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/borderedittext"
        android:hint="Masukan nomor anda"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailpesanan" />
    <TextView
        android:id="@+id/label_nomorpesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="-10dp"
        android:text="No.Handphone"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintBottom_toTopOf="@id/nomorpesanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tanggalpesanan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/borderedittext"
        android:focusable="false"
        android:hint="Pilih Tanggal"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomorpesanan" />
    <TextView
        android:id="@+id/label_tanggalpesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="-10dp"
        android:text="Tanggal"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintBottom_toTopOf="@id/tanggalpesanan"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/comboboxmember"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/borderedittext"
        android:hint="Masukan Jumlah Pengunjung"
        android:inputType="number"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggalpesanan" />
    <TextView
        android:id="@+id/label_jumlahpesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="-10dp"
        android:text="Jumlah Pengunjung"
        android:background="@color/white"

        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintBottom_toTopOf="@id/comboboxmember"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/urbanistregular"
        android:text="Saya menyetujui pemrosesan data pribadi saya."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comboboxmember" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollcontent">

        <!-- Label Tiket -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ralewayreguler"
            android:text="Tiket"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/garis" />

        <!-- Harga Tiket -->
        <TextView
            android:id="@+id/txthargatiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ralewaybold"
            android:text="Rp.10.000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/garis" />

        <!-- Garis Pemisah -->
        <View
            android:id="@+id/garis"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txthargatiket" />

        <!-- Label Total Cost -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ralewayreguler"
            android:text="Total Cost"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/garis"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Total Cost -->
        <TextView
            android:id="@+id/txttotalcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ralewaybold"
            android:text="Rp.200.000"
            android:textColor="@color/bluebutton"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/garis"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tombol Checkout -->
        <Button
            android:id="@+id/buttonbayar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Checkout"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
